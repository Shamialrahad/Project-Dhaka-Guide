<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodbc"
    tools:context=".FoodActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/burgerss"
            android:onClick="ItemChoose"
            android:text="Burger"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/pizza"
            android:onClick="ItemChoose"
            android:text="Pizza"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/sub"
            android:onClick="ItemChoose"
            android:text="Sandwich"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/sausage"
            android:onClick="ItemChoose"
            android:text="Sausage"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/chicken"
            android:onClick="ItemChoose"
            android:text="Fried Chicken"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/softdrinks"
            android:onClick="ItemChoose"
            android:text="Drinks"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/beef"
            android:onClick="ItemChoose"
            android:text="Beef Steak"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/rice"
            android:onClick="ItemChoose"
            android:text="Rice Bowl"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="1" />


    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>