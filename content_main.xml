<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">



        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="#07dee6"
            android:drawableRight="@drawable/res"
            android:text="Hotel"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:background="#a26ea1"
            android:drawableRight="@drawable/fd1"
            android:text="food"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:background="#df4da5"
            android:drawableRight="@drawable/place1"
            android:text="Visit Place"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:background="#f4ec5d"
            android:drawableRight="@drawable/ts1"
            android:text="Transport"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:background="#3e70ab"
            android:drawableRight="@drawable/gs"
            android:text="Book Your Guide"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="1dp"
            android:background="#27a33c"
            android:drawableRight="@drawable/am1"
            android:text="ATM Location"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />



    </android.support.v7.widget.GridLayout>


</android.support.constraint.ConstraintLayout>