<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AtmActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="154dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/b1"
            android:onClick="ItemChoose"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/p1"
            android:onClick="ItemChoose"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:gravity="center_horizontal"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />
        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/brac"
            android:onClick="ItemChoose"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />
        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/ib"
            android:onClick="ItemChoose"
            android:gravity="center_horizontal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />
        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/hbsc1"
            android:onClick="ItemChoose"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />
        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:drawableRight="@drawable/c8"
            android:onClick="ItemChoose"
            app:layout_column="1"
            android:gravity="center_horizontal"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />





    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>